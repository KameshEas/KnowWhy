// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  conversations Conversation[]
  decisions     DecisionCandidate[]
  briefs        DecisionBrief[]
  slackWorkspaces SlackWorkspace[]

  @@map("users")
}

model Conversation {
  id              String   @id @default(cuid())
  title           String
  content         String
  source          String   // "slack", "zoom", "googlemeet", "jira", "upload"
  author          String?
  timestamp       DateTime @default(now())
  userId          String
  slackMessageId  String?  // For idempotency + backfill tracking
  slackChannelId  String?
  slackThreadId   String?
  externalId      String?  // zoom/jira/etc id for idempotency
  metadata        Json     @default("{}")  // speaker, duration, etc
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  decisions DecisionCandidate[]

  @@map("conversations")
  @@unique([source, externalId])
}

model DecisionCandidate {
  id              String   @id @default(cuid())
  conversationId  String
  isDecision      Boolean
  summary         String
  confidence      Float
  agentVersion    String   @default("v1") // Track which prompt/model generated this
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String
  brief        DecisionBrief?

  @@map("decision_candidates")
}

model DecisionBrief {
  id                  String   @id @default(cuid())
  decisionSummary     String
  problem             String
  optionsConsidered   String[]
  rationale           String
  participants        String[]
  sourceReferences    Json     // [{type: "slack", messageId, timestamp, url}, ...]
  confidence          Float    @default(0.5) // 0-1 score from detection agent
  status              String   @default("pending") // pending, approved, archived
  tags                String[] @default([])
  decisionCandidateId String?  @unique
  userId              String
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  // Relations
  decisionCandidate DecisionCandidate? @relation(fields: [decisionCandidateId], references: [id], onDelete: SetNull)
  user              User               @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("decision_briefs")
}

model SlackWorkspace {
  id                  String   @id @default(cuid())
  workspaceId         String   @unique // Slack workspace ID (e.g., T123456789)
  workspaceName       String   // Team name
  botUserId           String?  // Bot user ID
  botAccessToken      String   // For API calls (encrypted in production)
  installedBy         String   // User email who installed the app
  userId              String?  // Link to User model (optional)
  installUrl          String   // Deep link to reinstall if token expires
  scopes              String[] // OAuth scopes granted: ["channels:read", "messages:read", ...]
  lastSyncedAt        DateTime? // Last time we fetched messages
  isActive            Boolean  @default(true)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  // Relations
  user                User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  installations       SlackInstallation[]
  syncStatus          SlackSyncStatus?

  @@map("slack_workspaces")
}

model SlackInstallation {
  id                  String   @id @default(cuid())
  workspaceId         String   @unique // Unique per workspace
  workspace           SlackWorkspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  botToken            String   // Encrypted bot token
  userToken           String?  // Encrypted user token (if using user scopes)
  issuedAt            DateTime @default(now())
  expiresAt           DateTime? // For refresh token flows
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@map("slack_installations")
}

model SlackSyncStatus {
  id                  String   @id @default(cuid())
  workspaceId         String   @unique
  workspace           SlackWorkspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  lastMessageTimestamp String?  // Last message ID processed (for incremental sync)
  totalChannels       Int      @default(0)
  totalMessages       Int      @default(0)
  errorCount          Int      @default(0)
  lastErrorMessage    String?
  isSyncing           Boolean  @default(false)
  lastSyncedAt        DateTime?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@map("slack_sync_status")
}

model RawData {
  id              String   @id @default(cuid())
  source          String   // "slack", "zoom", "jira", "upload", etc.
  externalId      String   // Source-specific identifier for idempotency
  encryptedData   String   // AES-256-GCM encrypted data
  iv              String   // Initialization vector (base64)
  authTag         String   // Authentication tag (base64)
  metadata        Json     @default("{}") // Additional metadata
  createdAt       DateTime @default(now())
  expiresAt       DateTime // When this data should be purged
  updatedAt       DateTime @updatedAt

  @@map("raw_data")
  @@unique([source, externalId])
}

model VectorEmbedding {
  id              String   @id @default(cuid())
  text            String   // Original text that was embedded
  embedding       Float[]  // Vector embedding (array of floats)
  source          String   // "conversation", "decision_brief", etc.
  sourceId        String   // ID of the source object
  metadata        Json     @default("{}") // Additional metadata
  createdAt       DateTime @default(now())

  @@map("vector_embeddings")
}
